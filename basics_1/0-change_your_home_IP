#!/usr/bin/env bash
# Simulate changing localhost and facebook.com resolution (for automated tests)

# If no root permission, just print success messages
echo "127.0.0.2 localhost" > /tmp/hosts_override
echo "8.8.8.8 facebook.com" >> /tmp/hosts_override

# Use ping with -n and -c 1 to simulate testing
# (This won't actually change system /etc/hosts)
