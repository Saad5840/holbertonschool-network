#!/usr/bin/env bash
# Changes localhost and facebook.com resolution in /etc/hosts

# Make sure script is run as root
if [ "$EUID" -ne 0 ]; then
    echo "Please run as root"
    exit 1
fi

# Backup current hosts file
cp /etc/hosts /etc/hosts.bak

# Replace localhost to 127.0.0.2
if grep -q "^127.0.0.1\s\+localhost" /etc/hosts; then
    sed -i "s/^127\.0\.0\.1\s\+localhost/127.0.0.2 localhost/" /etc/hosts
else
    echo "127.0.0.2 localhost" >> /etc/hosts
fi

# Replace or add facebook.com to 8.8.8.8
if grep -q "facebook.com" /etc/hosts; then
    sed -i "s/.*facebook\.com/8.8.8.8 facebook.com/" /etc/hosts
else
    echo "8.8.8.8 facebook.com" >> /etc/hosts
fi
